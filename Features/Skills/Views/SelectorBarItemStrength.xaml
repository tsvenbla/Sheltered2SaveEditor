<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Sheltered2SaveEditor.Features.Skills.Views.SelectorBarItemStrength"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Sheltered2SaveEditor.Features.Skills.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:StrengthSkillsViewModel}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RowSpacing="12" ColumnSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Tier 1"
                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <Image Grid.Row="0" Grid.Column="1" ToolTipService.ToolTip="A jab to the target's windpipe, causing the winded status effect. Deals 100% base damage." Width="64" Source="ms-appx:///Assets/Skills/SkillStrengthCrushWindpipe.png" />
        <RatingControl Grid.Row="2" Grid.Column="1" MaxRating="3"/>
        <TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Crush Windpipe"/>

        <Image Grid.Row="0" Grid.Column="2" ToolTipService.ToolTip="An attack with a concealed poison weapon. Deals 100% base damage and causes the poison status effect." Width="64" Source="ms-appx:///Assets/Skills/SkillStrengthPoisonPunch.png" />
        <RatingControl Grid.Row="2" Grid.Column="2" MaxRating="3"/>
        <TextBlock Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Poison Punch"/>

        <Image Grid.Row="0" Grid.Column="3" ToolTipService.ToolTip="Increase carrying capacity by 5lbs." Width="64" Source="ms-appx:///Assets/Skills/SkillStrengthBackpackWeightTraining.png" />
        <RatingControl Grid.Row="2" Grid.Column="3" MaxRating="3"/>
        <TextBlock Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Backpack Weight Training"/>

        <Image Grid.Row="0" Grid.Column="4" ToolTipService.ToolTip="This character gains +5 strength. The boosted strength will wear off after the next turn." Width="64" Source="ms-appx:///Assets/Skills/SkillStrengthPumpUp.png" />
        <RatingControl Grid.Row="2" Grid.Column="4" MaxRating="1" />
        <TextBlock Grid.Row="1" Grid.Column="4" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Pump Up"/>

        <Image Grid.Row="0" Grid.Column="5" ToolTipService.ToolTip="Gain 5% extra experience from using strength related exercise objects." Width="64" Source="ms-appx:///Assets/Skills/SkillStrengthInherentStrength.png" />
        <RatingControl Grid.Row="2" Grid.Column="5" MaxRating="3" />
        <TextBlock Grid.Row="1" Grid.Column="5" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Inherent Strength"/>

        <Image Grid.Row="0" Grid.Column="6" ToolTipService.ToolTip="Increase the damage dealt by blunt weapons by 10%." Width="64" Source="ms-appx:///Assets/Skills/SkillStrengthBluntForceSpecialisation.png" />
        <RatingControl Grid.Row="2" Grid.Column="6" MaxRating="3" />
        <TextBlock Grid.Row="1" Grid.Column="6" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Blunt Force Specialisation"/>

        <Image Grid.Row="0" Grid.Column="7" ToolTipService.ToolTip="Has a 10% chance to cause the Fear status effect on opposing targets at the beginning of combat." Width="64" Source="ms-appx:///Assets/Skills/SkillStrengthImposingPhysique.png" />
        <RatingControl Grid.Row="2" Grid.Column="7" MaxRating="1" />
        <TextBlock Grid.Row="1" Grid.Column="7" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Imposing Physique"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Tier 2"
                   VerticalAlignment="Center" HorizontalAlignment="Right"/>

        <Image Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" ToolTipService.ToolTip="A jab to the target's windpipe, causing the winded status effect. Deals 100% base damage." Width="64" Source="ms-appx:///Assets/Skills/SkillStrengthHeadbutt.png" />
        <RatingControl Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" MaxRating="3"/>
        <TextBlock Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Headbutt"/>

        <Image Grid.Row="3" Grid.Column="3" ToolTipService.ToolTip="Can attempt to cure a broken limb. Has a 25% chance of success." Width="64" Source="ms-appx:///Assets/Skills/SkillStrengthSetBone.png" />
        <RatingControl Grid.Row="4" Grid.Column="3" MaxRating="3"/>
        <TextBlock Grid.Row="5" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Set Bone"/>

        <Image Grid.Row="3" Grid.Column="5" ToolTipService.ToolTip="An attack which targets either arms or legs, dealing 200% base damage. Has a 50% chance of breaking the targeted limb." Width="64" Source="ms-appx:///Assets/Skills/SkillStrengthKick.png" />
        <RatingControl Grid.Row="4" Grid.Column="5" MaxRating="3"/>
        <TextBlock Grid.Row="5" Grid.Column="5" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Kick"/>

        <Image Grid.Row="3" Grid.Column="6" Grid.ColumnSpan="2"  ToolTipService.ToolTip="Charge at the target and smash into them with your shoulder, dealing 100% base damage. If there is a character in the back row behind them, they take 50% base damage, otherwise the target is pushed into the back row." Width="64" Source="ms-appx:///Assets/Skills/SkillStrengthShoulderBarge.png" />
        <RatingControl Grid.Row="4" Grid.Column="6" Grid.ColumnSpan="2"  MaxRating="3" />
        <TextBlock Grid.Row="5" Grid.Column="6" Grid.ColumnSpan="2"  HorizontalAlignment="Center" TextWrapping="Wrap" Text="Shoulder Barge"/>


        <TextBlock Grid.Row="7" Grid.Column="0" Text="Tier 3"
                   VerticalAlignment="Center" HorizontalAlignment="Right"/>

        <Image Grid.Row="6" Grid.Column="2" ToolTipService.ToolTip="Can equip 1 extra piece of equipment." Width="64" Source="ms-appx:///Assets/Skills/SkillStrengthUtilitySpecialist.png" />
        <RatingControl Grid.Row="7" Grid.Column="2" MaxRating="2"/>
        <TextBlock Grid.Row="8" Grid.Column="2" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Utility Specialist"/>

        <Image Grid.Row="6" Grid.Column="4" ToolTipService.ToolTip="An unarmed attack targetting the opponent's chest, dealing 200% base damage and inflicting the winded and fear status effects." Width="64" Source="ms-appx:///Assets/Skills/SkillStrengthExplodingHeartAttack.png" />
        <RatingControl Grid.Row="7" Grid.Column="4" MaxRating="3"/>
        <TextBlock Grid.Row="8" Grid.Column="4" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Exploding Heart Attack"/>

        <Image Grid.Row="6" Grid.Column="6" ToolTipService.ToolTip="An attack in an upwards direction targeting the opponent's jaw. Causes 100% base damage and the Dazed and Impaired vision status effects." Width="64" Source="ms-appx:///Assets/Skills/SkillStrengthThunderousUppercut.png" />
        <RatingControl Grid.Row="7" Grid.Column="6" MaxRating="3"/>
        <TextBlock Grid.Row="8" Grid.Column="6" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Thunderous Uppercut"/>
    </Grid>
</Page>